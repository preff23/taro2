# Environment Configuration
NODE_ENV=development
PORT=8080

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tarabot
REDIS_URL=redis://localhost:6379

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_USERNAME=@your_tarabot_bot
TELEGRAM_PAYMENTS_PROVIDER_TOKEN=
TELEGRAM_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# JWT Configuration
JWT_ACCESS_SECRET=your_super_secret_access_key_here
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here
JWT_ACCESS_TTL=900s
JWT_REFRESH_TTL=30d

# AI Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# Feature Flags
FEATURE_VOICE=false
FEATURE_PHOTO=false
FEATURE_REFERRALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:3000,https://your-domain.com

# Admin
ADMIN_SECRET_KEY=your_admin_secret_key_here

# Payment Configuration
PAYMENT_WEBHOOK_URL=https://your-domain.com/api/payments/stars/callback
PAYMENT_SUCCESS_URL=https://your-domain.com/success
PAYMENT_CANCEL_URL=https://your-domain.com/cancel

# Subscription Plans
PRO_PLAN_PRICE=150
VIP_PLAN_PRICE=300
PRO_PLAN_DURATION_DAYS=30
VIP_PLAN_DURATION_DAYS=30

# Referral Configuration
REFERRAL_BONUS_STARS=50
REFERRAL_CODE_LENGTH=8
